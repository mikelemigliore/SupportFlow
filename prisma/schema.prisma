
// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  //output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  resetToken       String?    
  resetTokenExpiry DateTime?  
  sessions  Session[]
  tickets   Tickets[]
  workflows  Workflows[]
  insights   Insights[]
}

model Insights {
  id             String   @id @default(cuid())
  userId         String
  type           String
  date           String
  name    String
  summary String   @db.Text
  recurringIssues String  @db.Text
  automationIdeas String  @db.Text
  suggestedFaqs   String  @db.Text

  createdAt      DateTime @default(now())
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}


model Workflows {
  id             String   @id @default(cuid())
  userId         String

  // comes from AI
  type           String
  name    String
  date           String        // store as string for now (matches '11/30/2025, 03:37 PM')
  team           String
  bottlenecks        String   @db.Text
  summary String   @db.Text
  keyDifferences String   @db.Text
  recommendations String   @db.Text
  createdAt      DateTime @default(now())
  workflowA      WorkflowA[]
  workflowB      WorkflowB[]

  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}


model WorkflowA {
  id        String   @id @default(cuid())
  workflowsId String     // FK to Workflows
  title    String
  team     String
  workflowType String?
  system String?
  text String

  workflows   Workflows  @relation(fields: [workflowsId], references: [id], onDelete: Cascade)
}

model WorkflowB {
  id        String   @id @default(cuid())
  workflowsId String     // FK to Workflows
  title String
  team String
  workflowType String?
  system String?
  text String

  workflows   Workflows  @relation(fields: [workflowsId], references: [id], onDelete: Cascade)
}


model Tickets {
  id             String   @id @default(cuid())
  userId         String

  // comes from AI
  type           String
  name     String
  date           String        // store as string for now (matches '11/30/2025, 03:37 PM')
  summary        String   @db.Text
  category       String
  priority       String
  team           String
  suggestedReply String   @db.Text
  automationIdea String   @db.Text

  // extra fields you already have in the UI
  source         String        // "customer" | "employee" | "system"
  text           String   @db.Text   // original ticket text

  createdAt      DateTime @default(now())

  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}