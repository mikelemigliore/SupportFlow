// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  //output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  sessions  Session[]
  tickets   Tickets[]
}

model Tickets {
  id             String   @id @default(cuid())
  userId         String

  // comes from AI
  date           String        // store as string for now (matches '11/30/2025, 03:37 PM')
  summary        String   @db.Text
  category       String
  priority       String
  team           String
  suggestedReply String   @db.Text
  automationIdea String   @db.Text

  // extra fields you already have in the UI
  source         String        // "customer" | "employee" | "system"
  text           String   @db.Text   // original ticket text

  createdAt      DateTime @default(now())

  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}